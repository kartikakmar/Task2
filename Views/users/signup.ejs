<%layout("/layouts/boilerplate")%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/login-register.css">
</head>
<body class="background">
    <div class="container">
        <div class="register-container">
            <h2 class="text-center">Signup</h2>
            <form method="POST" action="/users">
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" name="listing[name]" class="form-control" id="name" placeholder="Enter your full name" required>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email"name=listing[email] class="form-control" id="email" placeholder="Enter your email" required>
                    </div>
                    <div class="col-md-6">
                        <label for="mobile" class="form-label">Mobile Number</label>
                        <input type="tel" name="listing[mobileno]" class="form-control" id="mobile" placeholder="Enter your mobile number" required>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="gender" class="form-label">Gender</label>
                        <select class="form-control" id="gender" name="listing[gender]">
                            <option value="">Select Gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" name="listing[age]" class="form-control" id="age" placeholder="Enter your age" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="address" class="form-label">Address</label>
                    <textarea class="form-control" id="address" name="listing[address]" rows="2" placeholder="Enter your address" required></textarea>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="city" class="form-label">City</label>
                        <input type="text" class="form-control" name="listing[city]" id="city" placeholder="Enter your city" required>
                    </div>
                    <div class="col-md-6">
                        <label for="pincode" class="form-label">Pincode</label>
                        <input type="text" class="form-control" name="listing[pincod]"  id="pincode" placeholder="Enter your pincod" required>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-6">
                        <label for="state" class="form-label">State</label>
                        <input type="text" class="form-control"  name="listing[state]" id="state" placeholder="Enter your state" required>
                    </div>
                    <div class="col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="listing[country]" id="country" placeholder="Enter your country" required>
                    </div>
                </div>
                <div class="mb-3 row">

                    <div class="col-md-6">
                        <label for="username" class="form-label">Username</label>
                        <input type="username" name="listing[username]" class="form-control" id="username" placeholder="Enter Usename" required>
                    </div>

                    <div class="col-md-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="listing[password]" class="form-control" id="password" placeholder="Enter password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary w-100" style="width: 50px;">Signup</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
